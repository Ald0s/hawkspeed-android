<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="setupProfileViewModel"
            type="com.vljx.hawkspeed.viewmodel.setup.SetupProfileViewModel" />

        <variable
            name="setupProfilePresenter"
            type="com.vljx.hawkspeed.presenter.setup.SetupProfilePresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.setup.SetupProfileFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup Profile"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Username"
            android:text="@={setupProfileViewModel.mutableUsername}" />

        <EditText
            android:id="@+id/bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="start|top"
            android:inputType="textMultiLine"
            android:lines="6"
            android:text="@={setupProfileViewModel.mutableBio}"
            android:hint="Bio ..."/>

        <Button
            android:id="@+id/setup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:enabled="@{setupProfileViewModel.canCompleteProfile}"
            android:onClick="@{(v) -> setupProfilePresenter.setupProfileClicked(setupProfileViewModel.setupProfileRequest)}"
            android:text="Setup Profile" />
    </LinearLayout>
</layout>