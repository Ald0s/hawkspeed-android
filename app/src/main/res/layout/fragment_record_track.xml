<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="recordTrackViewModel"
            type="com.vljx.hawkspeed.viewmodel.track.RecordTrackViewModel" />

        <variable
            name="recordTrackPresenter"
            type="com.vljx.hawkspeed.presenter.track.RecordTrackPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.track.RecordTrackFragment">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <Button
                android:id="@+id/use_recorded_track"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Use Recorded Track"

                android:onClick="@{(v) -> recordTrackPresenter.useRecordedTrackClicked(recordTrackViewModel.recordedPoints)}"/> <!--android:enabled="@{recordTrackViewModel.canUseRecordedTrack}"-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/record"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="@{recordTrackViewModel.canRecord}"
                    android:onClick="@{(v) -> recordTrackPresenter.recordClicked()}"
                    android:text="Record" />

                <Button
                    android:id="@+id/stop"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:enabled="@{recordTrackViewModel.canStop}"
                    android:onClick="@{(v) -> recordTrackPresenter.stopClicked()}"
                    android:text="Stop" />
            </LinearLayout>

            <Button
                android:id="@+id/reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reset"
                android:enabled="@{recordTrackViewModel.canResetTrack}"
                android:onClick="@{(v) -> recordTrackPresenter.resetClicked()}"/>
        </LinearLayout>

    </LinearLayout>
</layout>