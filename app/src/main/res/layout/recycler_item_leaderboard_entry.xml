<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="listViewItem"
            type="com.vljx.hawkspeed.models.track.LeaderboardEntryListViewItem" />

        <variable
            name="itemPresenter"
            type="com.vljx.hawkspeed.presenter.track.LeaderboardEntryPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{listViewItem.finishingPlace}" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{listViewItem.stopwatchMilli}" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{listViewItem.player.userName}" />
    </LinearLayout>
</layout>